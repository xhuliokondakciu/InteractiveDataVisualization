<div class="modal fade" id="create-chart-object-modal" tabindex="-1" role="dialog" aria-labelledby="create-chart-label" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="create-chart-label">Create item</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            @using (Html.BeginForm("CreateChartObject", "Workspace", FormMethod.Post, new { @class = "form-horizontal", role = "form", id = "create-chart-form" }))
            {
                <div class="modal-body">
                    <input type="hidden" name="CategoryId" id="category-id-input" />
                    <div class="form-group">
                        <label for="chart-title" class="col-form-label">Title:</label>
                        <input type="text" class="form-control" id="chart-title-input" required name="Title" />
                    </div>
                    <div class="form-group">
                        <label for="chart-description" class="col-form-label">Description:</label>
                        <textarea class="form-control" id="chart-description-input" name="Description"></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <input type="submit" class="btn btn-primary" id="create-chart-modal" value="Create">
                </div>
            }
        </div>
    </div>
</div>
